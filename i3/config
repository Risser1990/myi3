# i3 Config (v4) - Clean & Organized

## ───── Mod Key ─────
set $mod Mod4


## ───── Autostart ─────
# Kill existing polybar instances and launch new
exec_always --no-startup-id killall polybar
exec_always --no-startup-id ~/.config/scripts/polybar/launch_polybar.sh

# Tiling helper
exec_always autotiling

# Clipboard manager
exec_always --no-startup-id copyq
for_window [class="copyq"] floating enable, resize set 20 ppt 20 ppt, move position center

# Startup services
exec --no-startup-id xset s off -dpms
exec --no-startup-id dunst
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id nm-applet
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id nitrogen --restore
exec --no-startup-id ~/.config/scripts/i3/setup-monitors.sh
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &
exec --no-startup-id flameshot
exec --no-startup-id steam -silent
exec --no-startup-id 1password --silent
exec --no-startup-id sh -c "sleep 8 && birdtray"
exec --no-startup-id pamixer --set-volume 50 &


## ───── Fonts ─────
font pango:JetBrainsMono Nerd Font Propo 12


## ───── Scratchpads ─────
# CopyQ popup
for_window [class="updatescratch"] floating enable, resize set 40 ppt 40 ppt, move position center, move to scratchpad
for_window [class="weatherpop"] floating enable, resize set 60 ppt 60 ppt, move position center, move to scratchpad

# Notes scratchpad
bindsym $mod+n exec --no-startup-id kitty --class=scratchnote -e ~/.config/scripts/i3/scratchpad.sh
bindsym $mod+Shift+n scratchpad show
for_window [class="scratchnote"] floating enable, resize set 40 ppt 40 ppt, move position center, move to scratchpad


## ───── App Shortcuts ─────
# Common apps
set $browser brave-browser
set $clip "copyq show"
set $editor geany
set $file thunar
set $game steam
set $launcher "rofi -show drun"
set $mail thunderbird
set $office onlyoffice-desktopeditors
set $shot flameshot gui
set $terminal kitty

# Keybinds to launch
bindsym $mod+b exec $browser
bindsym $mod+p exec $clip
bindsym $mod+e exec $editor
bindsym $mod+f exec $file
bindsym $mod+g exec $game
bindsym $mod+space exec $launcher
bindsym $mod+m exec $mail
bindsym $mod+o exec $office
bindsym $mod+Print exec $shot
bindsym $mod+Return exec $terminal


## ───── Update Script ─────
bindsym $mod+Ctrl+u exec --no-startup-id ~/.config/scripts/i3/update-scratchpad.sh


## ───── Volume Controls ─────
bindsym $mod+F10 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+F12 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%


## ───── Window Management ─────
bindsym $mod+Page_Up floating toggle
bindsym $mod+x kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+Escape exec --no-startup-id ~/.config/scripts/rofi/rofi_power.sh
floating_modifier $mod

gaps inner 8

# Focus windows
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Resize windows with script
bindsym $mod+Ctrl+Left exec --no-startup-id ~/.config/scripts/i3/i3resize left
bindsym $mod+Ctrl+Right exec --no-startup-id ~/.config/scripts/i3/i3resize right
bindsym $mod+Ctrl+Up exec --no-startup-id ~/.config/scripts/i3/i3resize up
bindsym $mod+Ctrl+Down exec --no-startup-id ~/.config/scripts/i3/i3resize down


## ───── Workspaces ─────
# Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Assign to monitors
workspace $ws1 output DisplayPort-1
workspace $ws2 output DisplayPort-0

# Navigation
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# Move focused container
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# Back-and-forth switching
workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth


## ───── Window Appearance ─────
default_border pixel 5
new_window pixel 5

# Colors
set $color4  #fd971f
set $bg      #272822
set $fg      #fd971f

# Border colors
client.focused          $color4 $color4 $fg $color4
client.focused_inactive $bg     $bg     $fg $bg
client.unfocused        $bg     $bg     $fg $bg
client.urgent           $color4 $color4 $fg $color4
client.placeholder      $bg     $bg     $fg $bg
client.background       $bg

